<p></p>

<div class="container">
  <div class ="col-md-3">
    <h4 class ="bg-light", align="center">会員一覧</h4>
  </div>
  
  <div class ="row">
    <div class ="col-md-8 mx-auto">
      <table class ="table">
      <thead class ="bg-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>  
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
            <span class ="text-dark border-bottom border-dark"><%= customer.last_name %><%= customer.first_name %></span>
            <% end %>
          </td>
          <td><%= customer.email  %></td>
          <td>
            <% if customer.is_deleted == false  %>
              <span class ="text-success font-weight-bold">有効</span>
              <% else %>
              <span class ="text-secondary font-weight-bold">退会</span>
            <% end %>
          </td>
        </tr>
      <% end %>  
      </tbody> 
      </table>
    </div>
  </div>
  <div class=" col-md-12 d-flex justify-content-center"><%= paginate @customers %></div>
</div>