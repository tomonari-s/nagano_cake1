<h4>管理者ログイン</h4>

<div class="container", align="center", :class="lh-lg">
<table style="border:none;", :class="table" >
<thead "width: 100%">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <tr>
    <th style="width: 30%"></th>
    <th style="width: 70%"></th>
  </tr>
  
  <tr class="field">
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>

  <tr class="field">
      <td><%= f.label :パスワード %></td>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
  </tr>
  
  <tr class="actions">
    <td></td>
    <td><%= f.submit "ログイン" %></td>
  </tr>
<% end %>
</thead>
</table>
</div>

<%= render "admin/shared/links" %>
