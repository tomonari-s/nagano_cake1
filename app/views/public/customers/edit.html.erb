<h2>会員情報編集</h2>

<div class="container", align="center", :class="lh-lg">
    <table style="border:none;", :class="table" >


      <%= form_with model: @customer, url: public_customer_path(@customer.id) do |f| %>
        
        <tr class="field">
          <td valign="middle"><%= f.label :"氏名" %></th>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td><%= f.text_field :first_name, autofocus: true %></td>
        </tr>
        <tr class="field">
          <th><%= f.label :"フリガナ" %></th>
          <td><%= f.text_field :last_name_kana, autofocus: true %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true %></td>
        </tr>
        <tr class="form-group">
          <th><%= f.label  '郵便番号' %></th>
          <td><%= f.text_field :postal_code, autofocus: true  %></td>
        </tr>
        <tr class="field">
          <th valign="middle"><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, autofocus: true %></td>
        </tr>
        <tr class="field">
          <th><%= f.label :"電話番号" %></th>
          <td><%= f.text_field :telephone_number, autofocus: true %></td>
        </tr>
        <tr class="field">
          <th valign="middle"><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true %></td>
        </tr>
        <tr>
          <th class="actions"><%= f.submit "編集内容を保存", :class =>'btn btn-success' %></th>
          <th></th>
          <th class="actions"><%= link_to "退会する", public_withdrawal_path, method: :patch, data: { confilm: "本当に退会しますか？" } %></th>
        </tr>
      <% end %>
  </table>
</div>