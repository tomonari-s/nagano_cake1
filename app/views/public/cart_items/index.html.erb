<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,
            "data-confirm" => "本当に空にしますか？" %><br>

<table>
  <thead>
      <th>単価(税込)</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
              <td><%= image_tag cart_item.item.image, size: "70x70" %>
                <%= cart_item.item.name  %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %>
            <%= f.select :amount, *[1..10], autofocus: true, autocomplete: "amount"  %>
            <%= f.submit "変更", :class =>'btn btn-success' %>
            <% end %>
            </td>
          <td><%= cart_item.subtotal %></td>
          <td>
           <%= link_to "削除する", cart_item_path(cart_item), method: :delete %>
          </td> 
          
          <% @total +=  cart_item.subtotal %>
          
          
      </tr>
  <% end %>
  
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path %>
<%= @total  %>
<%= link_to "情報入力に進む", new_order_path %>