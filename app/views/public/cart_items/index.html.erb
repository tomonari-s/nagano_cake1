<table>
  <thead>
      <th>単価(税込)</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
              <td><%= cart_item.item.name  %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item) do |f| %>
            <%= f.select :amount, *[1..10], autofocus: true, autocomplete: "amount"  %>
            <%= f.submit "変更", :class =>'btn btn-success' %>
            <% end %>
            </td>
          <td><%= cart_item.subtotal %></td>
          <td>
           <%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %>
          </td> 
          <%= link_to "買い物を続ける", public_root_path %>
          <% @total +=  cart_item.subtotal %>
          
          
      </tr>
  <% end %>
  
  </tbody>
</table>
<%= @total  %>