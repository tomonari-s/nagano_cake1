<p></p>

<div class="container">
  <div class ="col-md-3">
    <h3 class ="bg-light", align="center">注文履歴一覧</h3>
  </div>
  
  <div class ="row">
    <div class ="col-md-12">
      <table class ="table table-bordered mt-5">
        <tr class="table-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <% @total = 0 %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.delivery_address_postal_code %><br /><%= order.delivery_address %><br /><%= order.delivery_address_name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br />
            <% @total += order_detail.purchase_price * order_detail.amount %>
            <% end %>
          </td>
          <td><%= @total %>円</td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to '表示する', order_path(order), class:"btn btn-primary d-flex justify-content-center text-alignment-center" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
